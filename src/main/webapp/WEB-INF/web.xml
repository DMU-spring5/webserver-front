<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- =======================
         건강 영역 (health)
         ======================= -->

    <!-- 건강 메인: 운동 칼로리 검색 / 칼로리 계산기 선택 -->
    <servlet>
        <servlet-name>healthPage</servlet-name>
        <jsp-file>/WEB-INF/views/health.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthPage</servlet-name>
        <url-pattern>/health</url-pattern>
    </servlet-mapping>

    <!-- 운동 칼로리 검색 메인 (부위 선택) -->
    <servlet>
        <servlet-name>healthMainPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthMainPage</servlet-name>
        <url-pattern>/health_main</url-pattern>
    </servlet-mapping>

    <!-- 부위별 운동 페이지들 -->
    <servlet>
        <servlet-name>healthShoulderPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_shoulder.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthShoulderPage</servlet-name>
        <url-pattern>/health_shoulder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>healthChestPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_chest.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthChestPage</servlet-name>
        <url-pattern>/health_chest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>healthBackPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_back.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthBackPage</servlet-name>
        <url-pattern>/health_back</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>healthLegPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_leg.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthLegPage</servlet-name>
        <url-pattern>/health_leg</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>healthCtPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_ct.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthCtPage</servlet-name>
        <url-pattern>/health_ct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>healthSportsPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_sports.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthSportsPage</servlet-name>
        <url-pattern>/health_sports</url-pattern>
    </servlet-mapping>

    <!-- 운동 상세 (시간/강도/체중 -> 칼로리) -->
    <servlet>
        <servlet-name>healthExerciseDetailPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_exercise_detail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthExerciseDetailPage</servlet-name>
        <url-pattern>/health_exercise_detail</url-pattern>
    </servlet-mapping>

    <!-- 칼로리 계산기 1/2/3 단계 -->
    <servlet>
        <servlet-name>healthCalculatorPage</servlet-name>
        <jsp-file>/WEB-INF/views/health_calculator.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthCalculatorPage</servlet-name>
        <url-pattern>/health_calculator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>healthCalculator2Page</servlet-name>
        <jsp-file>/WEB-INF/views/health_calculator2.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthCalculator2Page</servlet-name>
        <url-pattern>/health_calculator2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>healthCalculator3Page</servlet-name>
        <jsp-file>/WEB-INF/views/health_calculator3.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>healthCalculator3Page</servlet-name>
        <url-pattern>/health_calculator3</url-pattern>
    </servlet-mapping>


    <!-- =======================
         소셜 영역 (social)
         ======================= -->

    <!-- 소셜 커뮤니티 메인 -->
    <servlet>
        <servlet-name>socialBoardPage</servlet-name>
        <jsp-file>/WEB-INF/views/social_board.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>socialBoardPage</servlet-name>
        <url-pattern>/social/board</url-pattern>
    </servlet-mapping>

    <!-- 소셜 글 상세 (필요 시 사용) -->
    <servlet>
        <servlet-name>socialDetailPage</servlet-name>
        <jsp-file>/WEB-INF/views/social_detail.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>socialDetailPage</servlet-name>
        <url-pattern>/social/detail</url-pattern>
    </servlet-mapping>

    <!-- 소셜 글쓰기 -->
    <servlet>
        <servlet-name>socialWritePage</servlet-name>
        <jsp-file>/WEB-INF/views/social_write.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>socialWritePage</servlet-name>
        <url-pattern>/social/write</url-pattern>
    </servlet-mapping>

    <!-- 부대 별 평가 - 첫 화면(검색) -->
    <servlet>
        <servlet-name>socialUnitPage</servlet-name>
        <jsp-file>/WEB-INF/views/social_unit.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>socialUnitPage</servlet-name>
        <url-pattern>/social_unit</url-pattern>
    </servlet-mapping>

    <!-- 부대 별 평가 - 목록 -->
    <servlet>
        <servlet-name>socialUnitListPage</servlet-name>
        <jsp-file>/WEB-INF/views/social_unit_list.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>socialUnitListPage</servlet-name>
        <url-pattern>/social_unit_list</url-pattern>
    </servlet-mapping>

    <!-- 부대 별 평가 - 평가하기 -->
    <servlet>
        <servlet-name>socialUnitWritePage</servlet-name>
        <jsp-file>/WEB-INF/views/social_unit_write.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>socialUnitWritePage</servlet-name>
        <url-pattern>/social_unit_write</url-pattern>
    </servlet-mapping>


    <!-- =======================
         지도 영역 (map)
         ======================= -->

    <!-- 지도 첫 화면 -->
    <servlet>
        <servlet-name>mapPage</servlet-name>
        <jsp-file>/WEB-INF/views/map.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mapPage</servlet-name>
        <url-pattern>/map</url-pattern>
    </servlet-mapping>

    <!-- (선택) 도보/버스/지하철 결과 화면 / 핀 화면
         필요 없으면 아래 3~4개 블록은 빼도 됨 -->
    <servlet>
        <servlet-name>mapWalkPage</servlet-name>
        <jsp-file>/WEB-INF/views/map_walk.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mapWalkPage</servlet-name>
        <url-pattern>/map_walk</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mapBusPage</servlet-name>
        <jsp-file>/WEB-INF/views/map_bus.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mapBusPage</servlet-name>
        <url-pattern>/map_bus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mapSubwayPage</servlet-name>
        <jsp-file>/WEB-INF/views/map_subway.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mapSubwayPage</servlet-name>
        <url-pattern>/map_subway</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>mapPinPage</servlet-name>
        <jsp-file>/WEB-INF/views/map_pin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mapPinPage</servlet-name>
        <url-pattern>/map_pin</url-pattern>
    </servlet-mapping>


    <!-- =======================
         메인(뉴스 메인) 영역
         ======================= -->

    <!-- 로그인 전 메인 (/main) -->
    <servlet>
        <servlet-name>mainPage</servlet-name>
        <jsp-file>/WEB-INF/views/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainPage</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <!-- (선택) 로그인 후 메인: /mainpage_login -> /main/mainpage_login.jsp
         필요 없으면 이 블록은 삭제해도 됨 -->
    <servlet>
        <servlet-name>mainPageLogin</servlet-name>
        <jsp-file>/main/mainpage_login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>mainPageLogin</servlet-name>
        <url-pattern>/mainpage_login</url-pattern>
    </servlet-mapping>


    <!-- =======================
         기본 진입 (index.jsp)
         ======================= -->

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
